<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:magyarposta2.ViewModels"
             xmlns:asd="clr-namespace:magyarposta2"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="magyarposta2.Views.MainView"
             x:DataType="vm:MainViewModel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>      <!-- FORM -->
                <RowDefinition Height="Auto"/>  <!-- GOMBOK -->
            </Grid.RowDefinitions>

            <!-- FORM (görgethetõ) -->
            <ScrollViewer Grid.Row="0">
                <StackPanel>

                    <Label Content="Magyar Posta"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                    <Label Content="Csomag ID:"/>
                    <TextBox Text="{Binding IdInput}" Margin="0,0,0,10"/>

                    <Label Content="Csomag Neve:"/>
                    <TextBox Text="{Binding NameInput}" Margin="0,0,0,10"/>

                    <Label Content="Feladás ideje:"/>
                    <Calendar SelectionMode="SingleDate"
                              SelectedDate="{Binding SentDate}"
                              Height="220"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="{Binding Sent}" Margin="0,0,0,10"/>

                    <Label Content="Honnan:"/>
                    <TextBox Text="{Binding SentFromInput}" Margin="0,0,0,10"/>

                    <Label Content="Hova:"/>
                    <TextBox Text="{Binding DestinationInput}" Margin="0,0,0,10"/>

                    <Label Content="Csomag állapota:"/>
                    <ComboBox SelectedValue="{Binding StatusInput}"
                              Margin="0,0,0,10">
                        <x:String>Feldolgozás alatt</x:String>
                        <x:String>Kiszállítás alatt</x:String>
                        <x:String>Kiszállítva</x:String>
                        <x:String>Törölve</x:String>
                    </ComboBox>

                    <Label Content="Csomag ára:"/>
                    <TextBox Text="{Binding PriceInput}" Margin="0,0,0,10"/>

                    <Label Content="Csomag érkezési ideje (nap):"/>
                    <TextBox Text="{Binding DaysToArriveInput}"
                             Margin="0,0,0,20"/>

                </StackPanel>
            </ScrollViewer>

            <!-- GOMBOK (fix alul) -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*,*"
                  Margin="0,10,0,0">

                <Button Grid.Column="0"
                        Command="{Binding AddPackageCommand}"
                        Content="Hozzáadás"/>

                <Button Grid.Column="1"
                        Command="{Binding SaveCommand}"
                        Content="Mentés"/>

                <Button Grid.Column="2"
                        Command="{Binding LoadCommand}"
                        Content="Betöltés"/>

            </Grid>
        </Grid>

        <!-- JOBB OLDAL -->
        <ScrollViewer Grid.Column="1" Margin="10">
            <ItemsControl ItemsSource="{Binding Packages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <asd:UserControl1/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>
